    <fullName>purecloud__PC_EndDate_Required</fullName>
    <active>true</active>
    <description>An end date is required for PureCloud Campaigns</description>
    <errorConditionFormula>AND(NOT(ISBLANK(purecloud__PureCloud_Campaign_Setting__c)), ISBLANK(EndDate))</errorConditionFormula>
    <errorDisplayField>EndDate</errorDisplayField>
