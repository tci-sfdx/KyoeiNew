<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ChkDisasterNumber_NumbersChk</fullName>
    <active>true</active>
    <description>災害番号が数字であるかチェック</description>
    <errorConditionFormula>NOT(ISBLANK(DisasterNumber__c)) &amp;&amp; NOT(ISNUMBER(DisasterNumber__c))</errorConditionFormula>
    <errorDisplayField>DisasterNumber__c</errorDisplayField>
    <errorMessage>災害番号は数字で入力してください。</errorMessage>
</ValidationRule>
