<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CLOSEDateAndTime_RequiredCheck</fullName>
    <active>true</active>
    <description>CLOSE日時の必須チェック</description>
    <errorConditionFormula>AND(ISPICKVAL( Status__c ,&quot;クローズ&quot;), ISNULL(CLOSEDateAndTime__c))</errorConditionFormula>
    <errorDisplayField>CLOSEDateAndTime__c</errorDisplayField>
    <errorMessage>クローズする際にはCLOSE日時を入力してください</errorMessage>
</ValidationRule>
